<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="25dp"
    tools:context=".Post">

    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/id1" />
    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Steve Tim"
        android:textColor="#000000"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="65dp"
        android:textStyle="bold"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        app:srcCompat="@drawable/addphotos" />
    <ImageView
        android:id="@+id/i3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@android:drawable/ic_menu_report_image"
        app:tint="@color/black" />
    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Add photos"
        android:textColor="#000000"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Location"
        android:textColor="#837A7A"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="25dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Hatirjheel,Dhaka"
        android:textColor="#000000"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="25dp"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/t5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Edit"
        android:textColor="#4CAF50"
        android:layout_marginTop="255dp"
        android:layout_marginLeft="145dp"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/t6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Title"
        android:textColor="#837A7A"
        android:layout_marginTop="285dp"
        android:layout_marginLeft="28dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/i4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="305dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/titlebox" />
    <TextView
        android:id="@+id/t7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Description"
        android:textColor="#837A7A"
        android:layout_marginTop="365dp"
        android:layout_marginLeft="28dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/i5"
        android:layout_width="wrap_content"
        android:layout_height="207dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="395dp"
        app:srcCompat="@drawable/descriptionbox" />

    <ImageView
        android:id="@+id/i6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="615dp"
        android:layout_marginLeft="35dp"
        app:srcCompat="@drawable/recpost" />
    <TextView
        android:id="@+id/t8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:text="Post"
        android:textColor="#FFFFFF"
        android:layout_marginTop="625dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp" />


</RelativeLayout>