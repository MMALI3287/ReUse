<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    tools:context=".LoginPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="Hi, Welcome Back!" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#645A5C"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="Email" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#645A5C"
        android:layout_below="@+id/textField"
        android:layout_marginTop="20dp"
        android:text="Password" />
    <EditText

        android:id="@+id/textField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:shape="rectangle"
        android:layout_below="@+id/textView3"
        android:background="@drawable/edit_text_bg"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress" />
    <EditText

        android:id="@+id/textField2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:shape="rectangle"
        android:padding="12dp"
        android:layout_below="@+id/textView4"
        android:background="@drawable/edit_text_bg"
        android:layout_marginTop="10dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@+id/textField2"
        android:text="Remember Me" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#E86969"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textField2"
        android:layout_alignParentEnd="true"
        android:text="Forgot Password?" />


    <ImageView
        android:id="@+id/loginFB"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/login_with_facebook" />

    <ImageView
        android:id="@+id/loginGoogle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/loginFB"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/login_with_google" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView12"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ortext" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView12"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/line_1" />
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView12"
        android:layout_marginTop="70dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/line_1" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/checkBox"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/login_button" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/loginGoogle"
        app:srcCompat="@drawable/already_account_signup" />


</RelativeLayout>