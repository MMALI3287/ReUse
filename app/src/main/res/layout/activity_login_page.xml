<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    tools:context=".LoginPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:text="Hi, Welcome Back!" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#645A5C"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="30dp"
        android:text="Email" />
    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#645A5C"
        android:layout_below="@+id/email"
        android:layout_marginTop="20dp"
        android:text="Password" />
    <EditText

        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:shape="rectangle"
        android:layout_below="@+id/textView3"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:hint="example@gmail.com"
        android:inputType="textEmailAddress" />
    <EditText

        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:shape="rectangle"
        android:paddingLeft="12dp"
        android:layout_below="@+id/textView4"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="10dp"
        android:hint="Enter your password"
        android:inputType="textPassword"
        />



    <ImageView
        android:id="@+id/loginGoogle"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/imageView8"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/login_with_google" />


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="65dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ortext" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/line_1" />
    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_marginTop="70dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/line_1" />

    <ImageView
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/password"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/login_button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginGoogle"
        android:gravity="center"
        android:layout_marginTop="12dp">
        <TextView
            android:id="@+id/already"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? "
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:id="@+id/signTextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/com_facebook_blue"
            android:layout_marginLeft="8dp"/>
    </LinearLayout>


</RelativeLayout>