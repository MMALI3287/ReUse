<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="35dp"
    android:background="#F5F5F5"
    tools:context=".SignupPage">

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create an account"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginBottom="25dp"
        android:fontFamily="sans-serif-medium"  />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Your Display Name"
        android:background="@drawable/edit_text_border"
        android:layout_marginBottom="20dp"
        android:textSize="17sp"
        android:paddingLeft="12dp"
        android:layout_below="@id/t1"
        android:textAlignment="textStart"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Your Email"
        android:background="@drawable/edit_text_border"
        android:textSize="17sp"
        android:paddingLeft="12dp"
        android:layout_below="@id/username"   />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Your Phone Number"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:paddingLeft="12dp"
        android:layout_below="@id/email"    />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="Enter Your Password"
        android:background="@drawable/edit_text_border"
        android:layout_marginTop="20dp"
        android:textSize="17sp"
        android:paddingLeft="12dp"
        android:layout_below="@id/phone"   />

    <ImageView
        android:id="@+id/signup"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/password"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/signup_field___text"   />

    <ImageView
        android:id="@+id/i1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/line_1" />

    <ImageView
        android:id="@+id/i2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/line_1" />

    <ImageView
        android:id="@+id/i3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/ortext" />


    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/i3"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/signup_with_google" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView14"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/alredy_account_login" />

</RelativeLayout>